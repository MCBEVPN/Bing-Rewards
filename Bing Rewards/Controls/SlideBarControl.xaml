<UserControl
    x:Class="Bing_Rewards.Controls.SlideBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bing_Rewards.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="50"
    d:DesignHeight="450"
    mc:Ignorable="d">
    <Grid>
        <Border
            Background="#FF202020"
            BorderBrush="White"
            BorderThickness="1"
            CornerRadius="15">
            <Grid>
                <ScrollViewer Margin="5" VerticalScrollBarVisibility="Hidden">
                    <StackPanel x:Name="stack">
                        <Button
                            Height="35"
                            Click="AddAccount_Click"
                            FontSize="20"
                            ToolTip="添加其他账号">
                            +
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
